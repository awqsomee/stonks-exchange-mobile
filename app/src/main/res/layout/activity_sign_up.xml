<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="0dp"
    android:paddingEnd="0dp"
    tools:context=".activity.SignUpActivity"
    android:background="@color/app_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout5">

        <EditText
            android:id="@+id/firstNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_input_field"
            android:ems="10"
            android:hint="Имя"
            android:inputType="textPersonName"
            android:padding="16dp"
            android:textColor="@color/app_background"
            android:textColorHint="@color/grey_form_placeholder"
            android:textCursorDrawable="@drawable/shape_edittext_cursor"
            android:textSize="@dimen/font_paragraph_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lastNameInput" />

        <EditText
            android:id="@+id/patronymicInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_input_field"
            android:ems="10"
            android:hint="Отчество"
            android:inputType="textPersonName"
            android:padding="16dp"
            android:textColor="@color/app_background"
            android:textColorHint="@color/grey_form_placeholder"
            android:textCursorDrawable="@drawable/shape_edittext_cursor"
            android:textSize="@dimen/font_paragraph_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/firstNameInput" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ФИО"
            android:textColor="@color/white"
            android:textSize="@dimen/font_body_12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/lastNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_input_field"
            android:ems="10"
            android:hint="Фамилия"
            android:inputType="textPersonName"
            android:padding="16dp"
            android:textColor="@color/app_background"
            android:textColorHint="@color/grey_form_placeholder"
            android:textCursorDrawable="@drawable/shape_edittext_cursor"
            android:textSize="@dimen/font_paragraph_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <EditText
            android:id="@+id/emailInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_input_field"
            android:ems="10"
            android:hint="E-mail"
            android:inputType="textPersonName"
            android:padding="16dp"
            android:textColor="@color/app_background"
            android:textColorHint="@color/grey_form_placeholder"
            android:textCursorDrawable="@drawable/shape_edittext_cursor"
            android:textSize="@dimen/font_paragraph_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/repeatPasswordInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:hintEnabled="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            app:passwordToggleEnabled ="true"
            app:passwordToggleTint="@color/grey_form_placeholder">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/repeatPasswordInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="@drawable/shape_input_field"
                android:ems="10"
                android:hint="Повторите пароль"
                android:inputType="textPassword"
                android:padding="16dp"
                android:textColor="@color/app_background"
                android:textColorHint="@color/grey_form_placeholder"
                android:textCursorDrawable="@drawable/shape_edittext_cursor"
                android:textSize="@dimen/font_paragraph_16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView11" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:hintEnabled="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/grey_form_placeholder">

            <com.google.android.material.textfield.TextInputEditText

                android:id="@+id/passwordSignUpInput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:background="@drawable/shape_input_field"
                android:ems="10"
                android:hint="Пароль"
                android:inputType="textPassword"
                android:padding="16dp"
                android:textColor="@color/app_background"
                android:textColorHint="@color/grey_form_placeholder"
                android:textCursorDrawable="@drawable/shape_edittext_cursor"
                android:textSize="@dimen/font_paragraph_16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Электронная почта"
            android:textColor="@color/white"
            android:textSize="@dimen/font_body_12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/patronymicInput" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Придумайте пароль"
            android:textColor="@color/white"
            android:textSize="@dimen/font_body_12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emailInput" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Повторите пароль"
            android:textColor="@color/white"
            android:textSize="@dimen/font_body_12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:paddingStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goBackBtn">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Регистрация"
            android:textColor="@color/orange"
            android:textSize="@dimen/font_header_24"
            android:textFontWeight="500"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/toLoginText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="66dp"
            android:text="Вход"
            android:textSize="@dimen/font_header_24"
            android:textFontWeight="500"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <android.widget.Button
        android:id="@+id/signUpBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/shape_dark_button"
        android:paddingHorizontal="40dp"
        android:paddingVertical="16dp"
        android:text="Зарегистрироваться"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textFontWeight="500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout6" />

    <ImageButton
        android:id="@+id/goBackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/button_back"  />

</androidx.constraintlayout.widget.ConstraintLayout>